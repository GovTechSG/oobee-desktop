{
  "name": "purplehatsdesktop",
  "productName": "Purple HATS",
  "version": "0.9.25",
  "private": true,
  "dependencies": {
    "axios": "^1.3.3",
    "fs-extra": "^11.1.1",
    "glob": "^10.2.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.10.0",
    "sass": "^1.61.0",
    "showdown": "^2.1.0",
    "webkit": "^0.0.0",
    "winston": "^3.8.2"
  },
  "main": "public/electron/main.js",
  "homepage": ".",
  "scripts": {
    "dev": "react-scripts start",
    "start": "electron-forge start",
    "build": "react-scripts build",
    "test:update-screenshot": "npx playwright test --update-snapshots",
    "eject": "react-scripts eject",
    "package": "electron-forge package",
    "make": "react-scripts build && electron-forge make",
    "make-mac": "curl -L -o \"./extraResources/purple-hats-portable-mac.zip\" https://github.com/GovTechSG/purple-hats/releases/download/$BE_TAG/purple-hats-portable-mac.zip && react-scripts build && electron-forge make --arch=universal --platform darwin",
    "make-win": "react-scripts build && electron-forge make --arch=x64 --platform win32"
  },
  "config": {
    "forge": "forge.config.js"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
    "@electron-forge/cli": "^6.4.1",
    "@electron-forge/maker-deb": "^6.4.1",
    "@electron-forge/maker-rpm": "^6.4.1",
    "@electron-forge/maker-squirrel": "^6.4.1",
    "@electron-forge/maker-zip": "^6.4.1",
    "@playwright/test": "^1.34.0-alpha-may-10-2023",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.3.3",
    "electron": "^24.8.5",
    "playwright": "^1.38.1",
    "react-scripts": "^5.0.1"
  },
  "overrides": {
    "webpack": "^5.78.0",
    "nth-check": "^2.1.1",
    "postcss": "^8.4.31"
  },
  "author": "Accessibility Enabling Team, GovTech",
  "description": "Purple HATS Desktop"
}
